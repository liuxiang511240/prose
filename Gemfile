gem "bson_ext"
gem 'bootstrap-sass', '2.1.1'
gem 'bootstrap-will_paginate'
gem 'annotate'
gem 'simditor'
gem 'therubyracer'

group :doc do
  # bundle exec rake doc:rails generates the API under doc/api.
  gem 'sdoc', require: false
end

