<%= render :partial => 'layouts/sidebar', :locals => {:author => @poetry.author_class} -%>
<div class="detail">
  <p id="notice"><%= notice %></p>

  <p class="title">
    <%= @poetry.title %>
  </p>

  <p class="source">
    由
    <%= @poetry.user.try(:name) -%>
    于
    <%= @poetry.created_at.strftime('%Y-%m-%d %H:%M:%S') -%>
    发布
  </p>

  <p>
    <%= @poetry.content %>
  </p>

  <%= link_to '编辑', edit_poetry_path(@poetry) if @poetry.can_edit?(current_user) %> |
  <%= link_to '返回', poetries_path %>
</div>
<%= render :partial => 'layouts/comments', :locals => {:subject => @poetry, :genre => 1} -%>
